		bindsym m exec urxvtc -e /usr/local/bin/Munta.sh usb
		bindsym p exec pcmanfm
		bindsym v exec urxvtc -e vifm ~/ ~/ 

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
# }}}

