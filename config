set  $6 KP_Right
set  $7 KP_Home 
set  $8 KP_Up
set  $9 KP_Prior
set $10 KP_Insert
set  $W1  "1: Files"
set  $W2  "2: People"
set  $W3  "3: Office"
set  $W4  "4: Browsers"
set  $W5  "5: System"
set  $W6  "6: Leisure"
set  $W7  "7: Chrome"
